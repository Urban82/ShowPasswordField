{
  "name": "showpasswordfield",
  "title": "Show Password Field",
  "id": "ShowPasswordField@danilo.treffiletti.it",
  "description": "Show your password in a readable format in the password fields of the web pages.",
  "author": "Danilo Treffiletti",
  "license": "MPL 2.0",
  "version": "0.4",
  "permissions": {
    "private-browsing": true
  },
  "preferences": [
    {
        "name": "debug",
        "title": "debug",
        "type": "bool",
        "value": false,
        "hidden": true
    },
    {
        "name": "showDelay",
        "title": "showDelay",
        "type": "integer",
        "value": 2
    },
    {
        "name": "hideDelay",
        "title": "hideDelay",
        "type": "integer",
        "value": 2
    },
    {
        "name": "customColors",
        "title": "customColors",
        "type": "bool",
        "value": true
    },
    {
        "name": "foreground",
        "title": "foreground",
        "type": "color",
        "value": "#FF0000"
    },
    {
        "name": "background",
        "title": "background",
        "type": "color",
        "value": "#FFFFFF"
    }
  ]
}
